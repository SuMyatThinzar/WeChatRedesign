<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="110dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginStart="@dimen/margin_medium"
        app:cardCornerRadius="@dimen/margin_medium"
        android:elevation="0dp">

        <com.padcmyanmar.smtz.wechatredesign.views.components.RoundCornerImageView
            android:id="@+id/ivSelectedContactProfile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:scaleType="centerCrop"
            android:src="@drawable/profile"
            app:cornerRadius="@dimen/margin_xxlarge" />

        <TextView
            android:id="@+id/tvSelectedContactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_card_medium_2"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="@color/black"
            android:text="Name"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>